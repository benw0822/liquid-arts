{
    "rewrites": [
        {
            "source": "/talent/:id",
            "destination": "/talent.html?id=:id"
        },
        {
            "source": "/article/:id",
            "destination": "/article.html?id=:id"
        },
        {
            "source": "/bar/id/:id",
            "destination": "/bar.html?id=:id"
        },
        {
            "source": "/:slug",
            "destination": "/api/slug_router?slug=:slug"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}